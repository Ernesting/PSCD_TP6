Monitor ControlCola

//VARIABLES PERMANENTES

int N---> tamaño de la cola

//VARIABLES CONDICION

condicion Tareas --> cuando la cola esta llena y hay se quiere añadir algun elemento
condicion Tags
condicion QoS

//OPERACIONES

ControlCola(tamañocola)
GetQueues()
Publish(cola, mensaje)
Read(cola, mensaje)

//

ControlCola(){

	int N= tamañocola; --> tamañocola se pasará al crear el monitor
	
	BoundedQueue<string> Tareas(N) \
	BoundedQueue<string> Tags(N)	----> crea las colas
	BoundedQueue<string> QoS(N)	   /
	
}

GetQueues(){

	Tareas.print()
	Tags.print()
	QoS.print()
}

Publish(cola, mensaje){

	while(cola.length()>= N){ ---------------> si la cola esta llena espera a que se libere
		waitC(cola);
	}
	cola.enqueue(mensaje)

}

Read(cola, mesaje){
	
	if(cola.lenth()>0){ ------------------->si la cola esta vacía 
		cola.primero=mensaje
		cola.deenqueue
	}
	signalCALL(cola)

}
